<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#242D32">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beach Press"
        android:id="@+id/actNameText"
        android:textSize="20sp"
        android:textColor="@android:color/white" android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:id="@+id/actWeightText"
        android:textSize="18sp"
        android:textColor="@android:color/white" android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting"
        android:id="@+id/returnText"
        android:textSize="48sp"
        android:textColor="@android:color/white" android:textStyle="bold"
        android:textAlignment="inherit"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" /> 
        
    <ImageView 
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:src="@drawable/led12"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ledImageView" />
    

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blankbutton1"
        android:text="Quit"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/goFinishButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>